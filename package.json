{
  "name": "react-angler",
  "version": "0.3.0",
  "description": "Functional react hooks to solve everyday problems in functional components.",
  "sideEffects": false,
  "repository": "https://www.github.com/jovidecroock/React-angler",
  "keywords": [
    "hooks",
    "react",
    "functional"
  ],
  "scripts": {
    "build": "microbundle",
    "filesize": "bundlesize",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env npm run test -- --watch"
  },
  "main": "dist/react-angler.js",
  "browser": "dist/react-angler.umd.js",
  "module": "dist/react-angler.module.js",
  "typings": "lib/index.d.ts",
  "license": "MIT",
  "mangle": {
    "regex": "^_"
  },
  "devDependencies": {
    "@types/jest": "23.3.13",
    "@types/react": "16.8.3",
    "bundlesize": "0.17.1",
    "codecov": "3.2.0",
    "cross-env": "5.2.0",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "microbundle": "0.9.0",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-testing-library": "5.8.0",
    "ts-jest": "23.10.5",
    "tslib": "1.9.3",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0",
    "typescript": "3.3.1"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/__tests__/**/?(*.)(test).ts?(x)"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/react-angler.module.js",
      "maxSize": "1.75 kB"
    },
    {
      "path": "./dist/react-angler.umd.js",
      "maxSize": "1.75 kB"
    },
    {
      "path": "./dist/react-angler.js",
      "maxSize": "1.75 kB"
    }
  ]
}
